{
  "name": "Save as Gist",
  "version": "0.0.2",
  "description": "Save notes and webpage information as private gists.",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "identity",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.github.com/",
    "https://github.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
